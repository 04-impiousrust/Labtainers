FROM mfthomps/labtainer.base
MAINTAINER jkhosali@nps.edu
ARG lab
ARG labdir
ARG imagedir
ADD $labdir/sys_$lab.tar.gz /
RUN apt-get update && apt-get install -y --no-install-recommends \
    tcpdump
# tcpdump fails to run if in /usr/sbin 
RUN sudo mv /usr/sbin/tcpdump /usr/bin/tcpdump

USER ubuntu
ENV HOME /home/ubuntu
ADD $labdir/$lab.tar.gz $HOME
RUN echo "cd" >> $HOME/.profile
RUN echo "source $HOME/.local/bin/startup.sh" >> $HOME/.profile
RUN echo "" > $HOME/.bash_logout
ENTRYPOINT sudo /sbin/faux_init && bash
